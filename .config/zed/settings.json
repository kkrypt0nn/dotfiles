// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "disable_ai": true,
  "features": {
    "edit_prediction_provider": "none"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "JetBrains",
  "theme": "Kanagawa Dragon",
  "theme_overrides": {
    "Kanagawa Dragon": {
      "syntax": {
        "constant.comment.todo": {
          "color": "#FFFFFF",
          "background_color": "#8EC07C"
        },
        "constant.comment.todo.text": {
          "color": "#7A8382",
          "font_style": "italic"
        },
        "string.comment.info": {
          "color": "#FFFFFF",
          "background_color": "#549C96"
        },
        "string.comment.info.text": {
          "color": "#7A8382",
          "font_style": "italic"
        },
        "keyword.comment.warn": {
          "color": "#FFFFFF",
          "background_color": "#C2A24C"
        },
        "keyword.comment.warn.text": {
          "color": "#7A8382",
          "font_style": "italic"
        },
        "property.comment.error": {
          "color": "#FFFFFF",
          "background_color": "#C24C4C"
        },
        "property.comment.error.text": {
          "color": "#7A8382",
          "font_style": "italic"
        },
        "emphasis.comment.user": {},
        "emphasis.comment.user.text": {
          "color": "#7A8382",
          "font_style": "italic"
        }
      }
    }
  },
  "ui_font_family": "MonoLisa",
  "ui_font_size": 16,
  "buffer_font_family": "MonoLisa",
  "buffer_font_size": 16.0,
  "buffer_font_weight": 700,
  "buffer_font_features": {
    "liga": true
  },
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "path": "/Users/krypton/.cargo/bin/rust-analyzer"
      }
    },
    "pylsp": {}
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": { "external": { "command": "black", "arguments": ["-"] } }
    }
  }
}
